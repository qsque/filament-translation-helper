{
    "name": "qsque/filament-translation-helper",
    "version": "1.0.0",
    "description": "A Filament plugin that provides automatic translations with fallback support for resources, forms and tables",
    "keywords": [
        "filament",
        "laravel",
        "translations",
        "i18n",
        "localization",
        "plugin"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Qsque",
            "email": "chernenok.es@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "illuminate/support": "^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Qsque\\FilamentTranslationHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qsque\\FilamentTranslationHelper\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Qsque\\FilamentTranslationHelper\\FilamentTranslationHelperServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}